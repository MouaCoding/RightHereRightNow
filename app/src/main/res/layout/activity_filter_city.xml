<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.example.rhrn.RightHereRightNow.FilterCityActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <include layout="@layout/messaging_bar"
        android:id="@+id/include"></include>


    <EditText
        android:id="@+id/search_cities"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/include"
        android:layout_marginTop="17dp"
        android:background="@drawable/rect_edittext"
        android:hint="@string/search_friends"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:textAlignment="center"
        android:textStyle="normal|bold" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/finish_city_filter"
            android:text="@string/finish"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rect_edittext"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_cities"
        android:id="@+id/city_list">
    </ListView>


    </RelativeLayout>

</LinearLayout>
